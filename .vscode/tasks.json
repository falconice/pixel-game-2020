{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "C:\\MinGW2022\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\build\\${fileBasenameNoExtension}.exe",
                "-I",
                // "C:/Program Files/SFML/SFML-2.5.1/include",
                "C:\\Libraries\\SFML2022_source\\SFML-2.5.1\\include",
                "-L",
                // "C:/Program Files/SFML/SFML-2.5.1/lib",
                "C:\\Libraries\\SFML2022_source\\SFML-2.5.1\\build\\lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-audio",
                "-lsfml-network",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "C:\\MinGW2022\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "g++.exe build main.cpp",
            "command": "g++.exe",
            "args": [
                "-g",
                "${fileDirname}\\main.cpp",
                "-o",
                "${fileDirname}\\build\\main.exe",
                "-I",
                // "C:/Program Files/SFML/SFML-2.5.1/include",
                "C:\\Libraries\\SFML2022_source\\SFML-2.5.1\\include",
                "-L",
                // "C:/Program Files/SFML/SFML-2.5.1/lib",
                "C:\\Libraries\\SFML2022_source\\SFML-2.5.1\\build\\lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-audio",
                "-lsfml-network",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "C:\\MinGW2022\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}